<Window x:Class="System_biblioteczny.Rejestr_wydawcow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_biblioteczny"
        mc:Ignorable="d"
        Title="Rejestr wydawców" Height="240" Width="255.2" ResizeMode="NoResize">
    <Grid Margin="0,0,-0.2,0.4">
        <Canvas x:Name="DG_Wydawcy_Canvas" HorizontalAlignment="Left" Height="171" Margin="10,10,0,0" VerticalAlignment="Top" Width="228.8">
            <DataGrid Height="171">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id"/>
                    <DataGridTextColumn Header="Nazwa wydawnictwa"/>
                    <DataGridTextColumn Header="Adres siedziby"/>
                </DataGrid.Columns>
            </DataGrid>
        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="19" Margin="10,186,0,0" VerticalAlignment="Top" Width="229">
            <Button x:Name="B_dodaj" Content="Dodaj wydawnictwo" Width="84" FontSize="9"/>
            <Button x:Name="B_Usun" Content="Usuń wydawnictwo" Canvas.Left="89" Width="83" FontSize="9"/>
        </Canvas>

    </Grid>
</Window>
