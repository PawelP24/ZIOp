<Window x:Class="System_biblioteczny.Add_Wydawca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_biblioteczny"
        mc:Ignorable="d"
        Title="Nowy wydawca" Height="193.867" Width="172.533">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="144" Margin="10,10,0,0" VerticalAlignment="Top" Width="148">
            <Label Content="Nazwa wydawnictwa" Canvas.Left="10" Canvas.Top="10" Padding="0"/>
            <TextBox x:Name="tb_Nazwa" Height="23" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="30" Width="120"/>
            <Label Content="Adres siedziby" Canvas.Left="10" Canvas.Top="58" Padding="0"/>
            <TextBox x:Name="tb_Adres" Height="23" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="78" Width="120"/>
            <Button x:Name="B_Dodaj" Content="Dodaj" Canvas.Left="10" Canvas.Top="115" Width="75" Click="B_Dodaj_Click"/>
        </Canvas>

    </Grid>
</Window>
