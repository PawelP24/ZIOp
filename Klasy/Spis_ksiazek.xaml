<Window x:Class="System_biblioteczny.Spis_ksiazek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_biblioteczny"
        mc:Ignorable="d"
        Title="Spis książek" Height="241.486" Width="300" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="DG_Ksiazki_Canvas" HorizontalAlignment="Left" Height="170" Margin="10,10,0,0" VerticalAlignment="Top" Width="274">
            <DataGrid Height="170" Width="274">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id"/>
                    <DataGridTextColumn Header="Kod ISBN"/>
                    <DataGridTextColumn Header="Tytuł"/>
                    <DataGridTextColumn Header="Autor"/>
                    <DataGridTextColumn Header="Nazwa wydawnictwa"/>
                </DataGrid.Columns>
            </DataGrid>
        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="23" Margin="10,185,0,0" VerticalAlignment="Top" Width="274">
            <Button x:Name="B_dodaj" Content="Dodaj książkę" Width="85"/>
            <Button x:Name="B_Usun" Content="Usuń książkę" Canvas.Left="90" Width="75"/>
        </Canvas>

    </Grid>
</Window>
